<?xml version="1.0" encoding="UTF-8"?>
<addon version="0.2">
    <title xml:lang="ko">타이틀 설정 애드온</title>
    <title xml:lang="en">Set Title Addon</title>
    <description xml:lang="ko">
        간단하게 사이트 타이틀을 바꿔주며 몇가지 부가 기능이 있습니다.
    </description>
    <version>1.3</version>
    <date>2012-12-8</date>
	<link>http://teamatde.co.kr/</link>

    <author email_address="hyung778@gmail.com" link="http://teamatde.co.kr/">
        <name>LI-NA</name>
    </author>
   
	<extra_vars>
	<group>
		<title xml:lang="ko">타이틀 제어</title>
		<var name="adminpage_use" type="select">
			<title xml:lang="ko">어드민 페이지 적용</title>
			<options value="admin">
				<title xml:lang="ko">적용 안함</title>
			</options>
			<options value="abccdfge">
				<title xml:lang="ko">적용</title>
			</options>
		</var>
		<var name="titlename_use" type="select">
			<title xml:lang="ko">타이틀 일괄변경</title>
			<options value="yesa">
				<title xml:lang="ko">타이틀 전체 변경</title>
			</options>
			<options value="yesb">
				<title xml:lang="ko">타이틀 뒤에 모듈의 브라우저 제목</title>
			</options>
			<options value="yesc">
				<title xml:lang="ko">타이틀 앞에 모듈의 브라우저 제목</title>
			</options>
			<options value="no">
				<title xml:lang="ko">사용 안함</title>
			</options>
		</var>
		<var name="titletik_type" type="select">
			<title xml:lang="ko">아레 문구의 앞뒤로 띄어쓰기 삽입</title>
			<options value="yes">
				<title xml:lang="ko">사용</title>
			</options>
			<options value="no">
				<title xml:lang="ko">사용 안함</title>
			</options>
		</var>
		<var name="titletik" type="text">
            <title xml:lang="ko">타이틀과 모듈명 사이에 들어갈 문구</title>
            <description xml:lang="ko">기본 " "(띄어쓰기)</description>
        </var>
		<var name="titlename" type="text">
			<title xml:lang="ko">타이틀 제목</title>
			<title xml:lang="en">Title Name</title>
            <description xml:lang="ko">바꿀 타이틀을 입력하세요.</description>
			<description xml:lang="en">Enter a title name.</description>
        </var>
	</group>
	<group>
		<title xml:lang="ko">도메인 제어</title>
		<var name="www_use" type="select">
			<title xml:lang="ko">자동 리다이렉션</title>
			<options value="no">
				<title xml:lang="ko">사용 안함</title>
			</options>
			<options value="typea">
				<title xml:lang="ko">www -> X</title>
			</options>
			<options value="typeb">
				<title xml:lang="ko">X -> www</title>
			</options>
			<description xml:lang="ko">예) www -> X :: 주소가 teamatde.co.kr 이 아닌경우 teamatde.co.kr로 리다이렉션.(이 경우 teamatde2.nflint.com으로 접속해도 teamatde.co.kr로 리다이렉션 됩니다.)</description>
		</var>
		<var name="siteurl" type="text">
            <title xml:lang="ko">사이트 주소</title>
            <description xml:lang="ko">www 기능 사용시 기본 URL을 적어주세요. (www와 http:// 없이 적어주세요.)</description>
        </var>
	</group>
   	</extra_vars>
</addon>